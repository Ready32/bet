name: CI

on:
  push:
    branches: [ "master" ]
  pull_request:
    branches: [ "master" ]
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v4

      # Устанавливаем Node.js
      - name: Set up Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '16' # Укажите нужную версию Node.js

      # Устанавливаем зависимости
      - name: Install dependencies
        run: npm install

      # Сборка проекта с помощью Parcel
      - name: Build project
        run: npm run build

      # Выводим сообщение о успешной сборке
      - name: Output success message
        run: echo "Сборка завершена успешно!"
